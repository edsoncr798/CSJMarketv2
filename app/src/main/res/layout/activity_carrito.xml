<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Carrito">

    <androidx.cardview.widget.CardView
        android:id="@+id/carrito_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <ImageButton
            android:id="@+id/vp_btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/carrito_cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carrito_topbar"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carrito"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carrito_txtCantItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su carrito está vacío"
            android:textAlignment="center"
            android:textColor="@color/secondary"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/carrito_cabecera"
        android:layout_above="@id/carrito_layoutInferior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListaCarrito"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/carrito_layoutInferior"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/carrito_mensajeMontoMinimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estimado cliente el monto mínimo de venta es 50 soles"
            android:textAlignment="center"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subtotal"
                android:paddingStart="5dp"
                android:layout_marginEnd="1dp"
                android:background="@color/gris"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/carrito_txtSubTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:background="@color/gris"
                android:paddingEnd="5dp"
                android:text="00.00"
                android:textSize="14sp"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:text="Envio"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.00"
                android:paddingEnd="5dp"
                android:textSize="14sp"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total"
                android:layout_marginEnd="1dp"
                android:paddingStart="5dp"
                android:background="@color/gris"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/carrito_txtTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00.00"
                android:layout_marginStart="1dp"
                android:background="@color/gris"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingEnd="5dp"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/estilo_boton1">
            <Button
                android:id="@+id/carrito_btnComprar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:layout_margin="10dp"
                android:inputType="textCapWords"
                android:text="Comprar"
                android:textStyle="bold"
                android:background="@drawable/ripple"
                android:enabled="false"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>