<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/DireccionEntrega_contenedorRelativo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DireccionEntrega"
    android:fitsSystemWindows="true">

  <androidx.cardview.widget.CardView
      android:id="@+id/carrito_topbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="5dp">

    <ImageButton
        android:id="@+id/vp_btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />
  </androidx.cardview.widget.CardView>

  <LinearLayout
      android:id="@+id/direccion_cabecera"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="15dp"
      android:layout_below="@+id/carrito_topbar"
      android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DIRECCIÓN DE ENTREGA"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por favor elija la dirección en la que desea recibir la mercadería."
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="10dp"/>

    </LinearLayout>

  <LinearLayout
      android:layout_below="@+id/direccion_cabecera"
      android:layout_above="@id/direccion_layoutInferior"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListaDireccion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/direccion_layoutInferior"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/estilo_boton1">

      <Button
          android:layout_margin="15dp"
          android:id="@+id/btnAddDireccion"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textCapWords"
          android:background="@drawable/ripple"
          android:textStyle="bold"
          android:text="Agregar dirección"/>
    </LinearLayout>

  </LinearLayout>

  </RelativeLayout>