<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pv_txtNumOpe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nro. Operación N°"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/pv_txtCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fausto Junior Arias Lopez"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doc. Identidad"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/pv_txtDocIden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="72352381"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monto"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/pv_txtMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S/ 99.00"
        android:textSize="14sp"/>

    <CheckBox
        android:id="@+id/pv_cbTerCon"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acepto los términos y condiciones"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/estilo_boton1">
        <Button
            android:id="@+id/pv_btnPagar"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ir a pagar"
            android:inputType="textCapWords"
            android:textStyle="bold"
            android:background="@drawable/ripple"
            android:enabled="false"/>
    </LinearLayout>

</LinearLayout>