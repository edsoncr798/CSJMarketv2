<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vistas.perfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/perfil_txtInicial"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="F"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:background="@drawable/estilo_caja_redonda"/>

        <TextView
            android:id="@+id/perfil_txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Fausto Arias"
            android:textColor="@color/black"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/perfil_txtCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="faustoarias1692@gmail.com"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/estilo_boton_google"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configuración"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <Button
                android:visibility="gone"
                android:id="@+id/perfil_btnInformacionPersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:text="Información personal"
                android:textAlignment="textStart"
                android:inputType="textCapWords"
                android:textStyle="bold"
                android:background="@drawable/estilo_boton1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <Button
                android:id="@+id/perfil_btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_logout_24"
                android:text="Cerrar sesión"
                android:textAlignment="textStart"
                android:inputType="textCapWords"
                android:background="@drawable/estilo_boton1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:textStyle="bold"/>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>