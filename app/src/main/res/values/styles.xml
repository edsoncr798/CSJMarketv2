<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CsjMarket" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondary</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/roboto</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Menu" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomRippleTheme">
        <item name="android:colorControlHighlight">@color/grey</item>
    </style>
</resources>